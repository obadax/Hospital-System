<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hospital Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <!-- Header -->
    <header class="my-5 text-center">
      <h1>Welcome to the Hospital Management System</h1>
      <p class="lead">Your one-stop solution for managing patients, doctors, and appointments efficiently.</p>
    </header>

    <!-- Navigation Cards -->
    <div class="row justify-content-center gap-3">

      <!-- Manage Patients -->
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Manage Patients</h5>
            <p class="card-text">Add, view, search, or edit patient details.</p>
            <a href="/patients" class="btn btn-primary">Manage Patients</a>
          </div>
        </div>
      </div>

      <!-- Manage Doctors -->
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Manage Doctors</h5>
            <p class="card-text">Add, view, search, or edit doctor details.</p>
            <a href="/doctors" class="btn btn-primary">Manage Doctors</a>
          </div>
        </div>
      </div>

      <!-- Appointments -->
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Appointments</h5>
            <p class="card-text">Schedule, view, and manage appointments.</p>
            <a href="/appointments" class="btn btn-primary">Manage Appointments</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</body>
</html>
