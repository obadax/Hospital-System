<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Patients</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
       .modal-dialog {
      height: 100vh;
    }
    </style>
   
</head>
<body>
  <div class="container mt-5">
    <form action="/searchPatient" method="get">  
      <label for="searchPatient" class="form-label">Search Patient</label>
      <div class="d-flex flex-column flex-md-row gap-3">
        <input type="search" class="form-control" id="patientName" name="name" placeholder="Patient Name" required>
        <input type="search" class="form-control" id="patientPhone" name="phone" placeholder="Patient Phone Number" required>
      </div>
      <button type="submit" class="btn btn-primary mt-2 px-4 py-2">Search</button>
    </form>
  </div>
  
    <div class="container mt-1">
      

      <a href="/addPatient" class="btn btn-secondary mt-4 mb-2 ">Add New Patient</a>
        <ul class="list-group">
            <% patients.forEach(patient => { %>
              <li class="list-group-item">
                <strong>ID: <%= patient.id %></strong><br>
                <strong>Name:</strong> <%= patient.name %><br>
                <strong>Age:</strong> <%= patient.age %><br>
                <strong>Address:</strong> <%= patient.address %><br>
                <strong>Phone:</strong> <%= patient.phone %><br>
          
                <!-- Corrected Edit Button -->
                <a href="/editPatient/<%= patient.id %>" class="btn btn-warning btn-sm mt-2">Edit</a>
              </li>
            <% }) %>
          </ul>
</body>
</html>
