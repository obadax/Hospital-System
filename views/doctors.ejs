<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Doctors</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">All Doctors</h1>
    <a href="/addDoctor" class="btn btn-primary mb-4">Add New Doctor</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Specialization</th>
          <th>Available Days</th>
          <th>Available Time</th>
          <th>Consultation Fee</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% doctors.forEach(doctor => { %>
          <tr>
            <td><%= doctor.id %></td>
            <td><%= doctor.name %></td>
            <td><%= doctor.specialization %></td>
            <td><%= doctor.availableDays %></td>
            <td><%= doctor.availableTime %></td>
            <td><%= doctor.consultationFee %></td>
            <td>
              <a href="/editDoctor/<%= doctor.id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/deleteDoctor/<%= doctor.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
